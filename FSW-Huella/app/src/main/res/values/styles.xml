<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FimeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_fsw</item>
    </style>

    <style name="TextTitulo" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextSubTitulo" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="TextCuerpo" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextCaption" parent="android:Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="FimeButton" parent="android:Widget.Button">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/bordes_buttons</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blanco</item>
    </style>

    <style name="Etiquetas">
        <item name="android:textColor">@color/colorIcons</item>
        <item name="android:textSize">20dp</item>
    </style>

</resources>
